<h2><%=@market.name%></h2>
<hr/>

<p>
  <strong>Type:</strong>
  <%= @market.kind %>
</p>

<h3>Counts | <%= link_to 'Add count', new_market_market_date_path(@market), class:'btn btn-sm btn-primary'%></h3>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Unique Customers</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @market_dates.each do |market_date| %>
            <tr>
                <td><%= market_date.day.strftime('%b %d, %Y') %></td>
                <td><%= market_date.unique_customers %></td>
                <td><%= link_to 'Show', market_market_date_path(@market, market_date), class:'btn btn-primary' %></td>
                <td><%= link_to 'Edit',edit_market_market_date_path(@market, market_date), class:'btn btn-warning' %></td>
                <td><%= link_to 'Delete',market_market_date_path(@market, market_date), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
            </tr>
        <% end %>
        <tr>
            <td>
                <strong>Total:</strong>
            </td>
            <td colspan="4">
                <strong>
                    <%= @total_customers %>
                </strong>
        </tr>
    </tbody>
</table>

<%= link_to 'Edit', edit_market_path(@market), class:'btn btn-warning' %> |
<%= link_to 'Back', markets_path, class:'btn btn-danger' %>
